#WorksheetModule.kv

#:import LatexLabel GUI_sub_files.WorksheetModule_folder.latex_widget_folder.latex_widget.LatexLabel

<WorksheetModule>:
    name: "WorksheetModule"
    ScreenManager:
        Questions:
            id: questions_screen
            name: "Questions"

<Questions>:
    #this is the background
    canvas.before:
        Color:
            rgba: (0.5, 0.3, 0.0, 1.0)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        #padding: 20
        #spacing: 20
        #this is the screen header.
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.05
            Label:
                text: "Questions"
                font_size: app.universal_font_size_app_variable / 1.5
            Button:
                text: "go back to main menu"
                font_size: app.universal_font_size_app_variable / 1.5
                on_press:
                    app.root.transition.direction = 'right'
                    app.root.current = 'MainMenuModule'
        #this is a tab system.
        TabbedPanel:
            do_default_tab: False
            id: question_tabs
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            TextInput:
                size_hint_x: 0.6
                id: answer_text_id
                hint_text: 'answer here :DDD'
            Button:
                size_hint_x: 0.2
                text: "preview test"
                on_press:
                    root.previewTest()
            Button:
                size_hint_x: 0.2
                text: "check test"
                on_press:
                    root.checkTest()
